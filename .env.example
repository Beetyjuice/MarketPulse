# MarketPulse Environment Configuration
# Copy this file to .env and fill in your values

# ==================== Kafka Configuration ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_STOCK_TOPIC=stock-prices
KAFKA_NEWS_TOPIC=financial-news
KAFKA_PREDICTIONS_TOPIC=predictions

# ==================== Cassandra Configuration ====================
CASSANDRA_HOST=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=marketpulse
CASSANDRA_REPLICATION_FACTOR=1

# ==================== Redis Configuration ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== Spark Configuration ====================
SPARK_MASTER_URL=spark://localhost:7077
SPARK_EXECUTOR_MEMORY=2g
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_CORES=2

# ==================== Dashboard Configuration ====================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ==================== Machine Learning Configuration ====================
ML_MODEL_PATH=models/
ML_CHECKPOINT_PATH=checkpoints/
ML_TRAINING_EPOCHS=50
ML_BATCH_SIZE=32
ML_LEARNING_RATE=0.001
ML_SEQUENCE_LENGTH=60

# Use GPU for training (true/false)
USE_GPU=false

# ==================== Data Collection Configuration ====================
# Scraping interval in seconds
STOCK_SCRAPE_INTERVAL=300
NEWS_SCRAPE_INTERVAL=900

# User agent for web scraping
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Rate limiting (requests per second)
SCRAPING_RATE_LIMIT=2

# ==================== API Keys (Optional) ====================
# Note: Most data sources don't require API keys
# Add your API keys here if using external services

# Alpha Vantage (for additional market data)
ALPHA_VANTAGE_API_KEY=

# Finnhub (for international stock data)
FINNHUB_API_KEY=

# News API (for additional news sources)
NEWS_API_KEY=

# ==================== Email Alerts (Optional) ====================
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/marketpulse.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ==================== Database Backup ====================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# ==================== Monitoring Configuration ====================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true

# ==================== Development Settings ====================
DEBUG_MODE=false
ENABLE_PROFILING=false
MOCK_DATA_SOURCES=false

# ==================== Security ====================
# Secret key for session management
SECRET_KEY=change-this-to-a-random-secret-key

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# ==================== Feature Flags ====================
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PORTFOLIO_TRACKING=true

# ==================== Docker Configuration ====================
# These are used in docker-compose.yml
COMPOSE_PROJECT_NAME=marketpulse
DOCKER_NETWORK=marketpulse-network
